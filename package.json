    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "tsup": "^8.0.2",
    "tsx": "^4.19.0",
    "typescript": "^5.4.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
